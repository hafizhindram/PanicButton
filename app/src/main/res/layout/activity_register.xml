<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/pattern"
    tools:context="com.panicbutton.projectbaru.LogReg.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/panic" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dp"
            android:text="PANIC BUTTON"
            android:textSize="18dip" />


        <EditText
            android:id="@+id/txt_nama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama Lengkap"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/txt_alamat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alamat"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_alamat"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_telp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telephone"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_telp"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/txt_confirm_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm Password"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:inputType="textPassword"
            android:password="true" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:textColor="#fff"
            android:text="Register"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah Punya Akun? Silahkan Login"
                android:textSize="16dp"
                android:layout_below="@+id/linearLayout"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

